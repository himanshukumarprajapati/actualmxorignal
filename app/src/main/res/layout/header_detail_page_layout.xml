<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F6F6F6"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_backButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ab_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txt_headerText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="header_text"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

       <!-- <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_bookmarkDetailHeader"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:visibility="gone"
                android:src="@drawable/img_bookmark" />
        </RelativeLayout>-->
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/detail_margin_5dp">

            <ImageView
                android:id="@+id/img_shareDetailHeader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/upload_bold_" />

            <TextView
                android:id="@+id/txtShareCount"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#000"
                android:text=""
                android:textSize="12dp"
                android:layout_marginTop="-9dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_serchHeader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/txtLikeCount"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#000"
                android:text=""
                android:textSize="12dp"
                android:layout_marginTop="-9dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_bookmarkHeader"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/star_unselected" />

            <TextView
                android:id="@+id/txtbookmarkCount"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#000"
                android:text=""
                android:textSize="12dp"
                android:layout_marginTop="-9dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e6e6e6"></View>


</LinearLayout>
