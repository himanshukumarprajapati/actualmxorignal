<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WebViewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="@dimen/detail_margin_5dp"
        android:paddingRight="@dimen/detail_margin_5dp">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="@color/white_color"
            android:src="@drawable/ab_back"
            android:text="share"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtNewsUrl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Loading..."
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnShareNewsUrl"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="share"
            android:textSize="16sp" />

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:id="@+id/webviewNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ProgressBar
        android:id="@+id/web_progress"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/tab_unselected"
        android:indeterminateTintMode="src_in"
        android:visibility="gone" />

</RelativeLayout>

</LinearLayout>
