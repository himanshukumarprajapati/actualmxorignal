<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/gridMoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/detail_margin_5dp"
        android:layout_marginRight="@dimen/detail_margin_5dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B2B2B2"
            android:orientation="vertical"
            android:padding="0.5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:id="@+id/imageOtherListItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo" />

                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:scaleType="center"-->
                <!--android:src="@drawable/img_videoplay" />-->

            </FrameLayout>
            <TextView
                android:id="@+id/btnRecentOtherListItem"
                android:layout_width="match_parent"
                android:background="@color/white_color"
                android:layout_height="wrap_content"
                android:text="222d" />


            <TextView
                android:id="@+id/textOtherListItem"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="bottom"
                android:background="#fff"
                android:maxLines="4"
                android:padding="5dp"
                android:text="New Text"
                android:textColor="#000"
                android:textSize="15sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#fff"
                android:orientation="horizontal">


             <!--   <LinearLayout
                    android:layout_width="53dp"
                    android:layout_height="30dp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    &lt;!&ndash;<ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_tab_call" />
&ndash;&gt;
                  &lt;!&ndash;  <TextView
                        android:id="@+id/btnRecentOtherListItem"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:text="222d" />&ndash;&gt;
                </LinearLayout>
-->
                <ImageButton
                    android:id="@+id/btnCommentOtherListItem"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:background="@null"
                    android:padding="4dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_like" />

                <ImageButton
                    android:id="@+id/btnShareOtherListItem"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:visibility="visible"
                    android:scaleType="fitCenter"
                    android:src="@drawable/aashare" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5.0dp"
            android:background="@drawable/ic_tab_call" />

    </LinearLayout>

</LinearLayout>