<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progressOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:indeterminateTint="@color/tab_unselected"
        android:indeterminateTintMode="src_in"
        android:visibility="gone" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="60dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:gravity="center"
      android:src="@drawable/logo_reg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:id="@+id/line1"
        >
        <EditText
            android:id="@+id/txt_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/edit_hint"
            android:padding="10dp"
            android:gravity="center"
            android:inputType="text"
            android:singleLine="true"
            android:hint="User Name"
            android:background="#00000000"
           />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/usernam_underline"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/edit_hint"
            android:padding="18dp"
            android:hint="Email"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:background="#00000000"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/email_underline"
            android:layout_marginBottom="5dp"
            />
       <!-- <EditText
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/texthint"
            android:padding="18dp"
            android:hint="Phone"
            android:background="#444444"
            android:layout_marginBottom="5dp"
            />-->
        <EditText
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/edit_hint"
            android:padding="18dp"
            android:hint="Password"
            android:gravity="center"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="#00000000"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/password_underline"
            android:layout_marginBottom="5dp"
            />
        <EditText
            android:id="@+id/txt_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/edit_hint"
            android:padding="18dp"
            android:gravity="center"
            android:inputType="textPassword"
            android:singleLine="true"
            android:background="#00000000"
            android:hint="Confirm Password"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/confirm_password_underline"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <Button
            android:id="@+id/button_registration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/padding_20dp"
            android:layout_marginRight="@dimen/padding_20dp"
            android:textColor="@color/windowBackground"
            android:background="@drawable/submit"
            />

        <TextView
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you have an account? "
            android:layout_below="@id/button_registration"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/edit_hint"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/text_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_marginLeft="@dimen/detail_margin_5dp"
            android:layout_toEndOf="@+id/button_cancel"
            android:layout_below="@id/button_registration"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/button_cancel" />
    </RelativeLayout>

</LinearLayout>
        </ScrollView>
    </RelativeLayout>